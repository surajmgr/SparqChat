{
  "compilerOptions": {
    /* Projects */
    "target": "ESNext",                                     /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    
    /* Modules */
    "module": "ESNext",                                   /* Specify what module code is generated. */
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
    /* Emit */
    "outDir": "./dist",                                     /* Output directory for generated files. */
    
    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true,               /* Ensure consistent casing in file names during imports. */

    /* Type Checking */
    "strict": true,                                         /* Enable strict type-checking options. */
    "skipLibCheck": true                                    /* Skip type checking of library declaration files. */
  },
  "include": [
    "src/**/*",                                            /* Include all files in the src folder. */
    "src/**/*.d.ts"                                         /* Include all .d.ts files in the src folder. */
  ]
}
